<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainTitleText">
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/littleWhite</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
    </style>
    
    <style name="subTitleTextWithMarquee">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="android:marqueeRepeatLimit">-1</item>
    </style>
    
    <style name="menuButtonText">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="mediumButtonText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="mediumBlockText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TabText">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="TabContentTitleText">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TabContentNormalText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BlackboardText">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twoBtnDialogLayout"
    android:layout_width="fill_parent"
   	android:layout_height="fill_parent">
    	
    <TextView
        android:id="@+id/dialog_message_line1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/lightgray"
	    android:textSize="20dp"
	    android:text="@string/phone_message_part1"/>
    
    <TextView
        android:id="@+id/dialog_message_line2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/lightgray"
	    android:textSize="20dp"
	    android:text="@string/phone_message_part2"
	    android:layout_below="@id/dialog_message_line1"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/dialog_message_line2"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/cancel_btn"
	        android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:textSize="15dp"
		    android:text="@string/cancel"/>
    
	    <Button 
	        android:id="@+id/ok_btn"
	        android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:textSize="15dp"
		    android:text="@string/ok"/>
        
    </LinearLayout>
    	
</RelativeLayout>
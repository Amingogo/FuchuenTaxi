<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
   	android:layout_height="wrap_content"
   	android:padding="3dp">
   	
    <RelativeLayout 
        android:id="@+id/from_layout"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
        
        <TextView
	        android:id="@+id/from_subtitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/lightgray"
		    android:textSize="20dp"
		    android:text="@string/from_txt"/>
        
        <EditText 
            android:id="@+id/from_edittext"
		    android:layout_width="380dp"
		    android:layout_height="wrap_content"
		    android:gravity="top"
		    android:minLines="2"
		    android:textSize="20dp"
		    android:hint="@string/from_hint"
		    android:layout_toRightOf="@id/from_subtitle"
		    android:layout_marginLeft="5dp"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/to_layout"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/from_layout">
        
        <TextView
	        android:id="@+id/to_subtitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/lightgray"
		    android:textSize="20dp"
		    android:text="@string/to_txt"/>
        
        <EditText 
            android:id="@+id/to_edittext"
		    android:layout_width="380dp"
		    android:layout_height="wrap_content"
		    android:gravity="top"
		    android:minLines="2"
		    android:textSize="20dp"
		    android:hint="@string/to_hint"
		    android:layout_toRightOf="@id/to_subtitle"
		    android:layout_marginLeft="5dp"/>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/to_layout"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/cancel_btn"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textSize="15dp"
		    android:text="@string/cancel"/>
    
	    <Button 
	        android:id="@+id/ok_btn"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textSize="15dp"
		    android:text="@string/ok"/>
        
    </LinearLayout>
   	
</RelativeLayout>